@model IList<LocadoraCarro.Models.Funcao>
<div class="divTexto">
    <h1 class="Titulo">Função</h1>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var funcao in Model)
        {
            <tr>
                <td>@funcao.Id</td>
                <td>
                    @Html.ActionLink(funcao.Nome, "Visualiza", new { id = funcao.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
<button class="btn btn-success" onclick="location.href='@Url.Action("Form", "Funcao")';return false;">Adicionar</button>
