
@model LocadoraCarro.Models.Cliente

<div class="divTexto">
    <h1 class="Titulo">Cliente</h1>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Cpf</th>
            <th>Email</th>
            <th>Telefone</th>
            <th>Login</th>
            <th>Senha</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td id="IdCliente">@Model.Id</td>
            <td>@Model.Nome</td>
            <td>@Model.Cpf</td>
            <td>@Model.Email</td>
            <td>@Model.Telefone</td>
            <td>@Model.Login</td>
            <td>******</td>
        </tr>
    </tbody>
</table>

@Html.ActionLink("Remover", "Remove", new { id = @Model.Id })

<canvas id="myChart" width="400" height="100"></canvas>

<script>

$.ajax({
    dataType: "json",
    type: "POST",
    url: "/Aluguel/RetornaStatus",
    data: {
        id: $("#IdCliente").text()
    },
    success: function (result) {
        montaGrafico(result)
    }
})

var ctx = document.getElementById("myChart").getContext('2d');

function montaGrafico(data) {
    var myChart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: ["Reservados", "Cancelados", "Finalizados", "Retirdos", "Não Retirados", "Atraso na devolução"],
            datasets: [{
                data: data,
                backgroundColor: [
                    'rgb(255, 99, 132)',
                    'rgb(54, 162, 235)',
                    'rgb(255, 206, 86)',
                    'rgb(75, 192, 192)',
                    'rgb(153, 102, 255)',
                    'rgb(255, 159, 64)'
                ],
                borderColor: [
                    'rgba(255,99,132,1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        }
    });
}
</script>