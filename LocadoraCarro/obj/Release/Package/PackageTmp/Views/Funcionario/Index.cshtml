
@model IList<LocadoraCarro.Models.Funcionario>

<div class="divTexto">
    <h1 class="Titulo">Funcionarios</h1>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Cpf</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var funcionario in Model)
        {
            <tr>
                <td>@funcionario.Id</td>
                <td>
                    @Html.ActionLink(funcionario.Nome, "Visualiza", new { id = funcionario.Id })
                </td>
                <td>@funcionario.Cpf</td>
            </tr>
        }
    </tbody>
</table>
<button class="btn btn-success" onclick="location.href='@Url.Action("Form", "Funcionario")';return false;">Adicionar</button>
