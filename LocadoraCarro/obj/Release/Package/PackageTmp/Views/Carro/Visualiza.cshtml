
<div class="divTexto">
    <h1 class="Titulo">Carro</h1>
</div>

<img id="Imagem-Carro" />
<label class="invisivel" id="src-imagem">@ViewBag.Carro.Imagem</label>
<table class="table table-dark">  
    <thead>
        <tr>
            <th >Id</th>
            <th>Descrição</th>
            <th>Preço Dia</th>
            <th>Classe</th>
            <th>Modelo</th>
            <th>Marca</th>
            <th>Quantidade Disponivel</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@ViewBag.Carro.Id</td>
            <td>@ViewBag.Carro.Descricao</td>
            <td>@ViewBag.Carro.PrecoDia</td>
            <td>@ViewBag.Classe.Nome</td>
            <td>@ViewBag.Modelo.Nome</td>
            <td>@ViewBag.Marca.Nome</td>
            <td>@ViewBag.Carro.QtdDisponivel</td>
        </tr>
    </tbody>
</table>

@Html.ActionLink("Remover", "Remove", new { id = @ViewBag.Carro.Id })

<script type="text/javascript" src="~/Content/JS/VisualizaCarro.js"></script>