<div class="divTexto">
    <h1 class="Titulo">Funções</h1>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome da Função</th>
            <th>Descrição</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@ViewBag.Funcao.Id</td>
            <td>@ViewBag.Funcao.Nome</td>
            <td>@ViewBag.Funcao.Descricao</td>
        </tr>
    </tbody>
</table>

@Html.ActionLink("Remover", "Remove", new { id = @ViewBag.Funcao.Id })