<script type="text/javascript" src="~/Content/JS/UsuarioAluguel.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js"></script>
<script type="text/javascript" src="~/Content/JS/DateTime.js"></script>
