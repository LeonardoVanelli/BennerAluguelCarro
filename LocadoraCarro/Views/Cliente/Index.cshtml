
@model IList<LocadoraCarro.Models.Cliente>

<div class="divTexto">
    <h1 class="Titulo">Clientes</h1>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Id</td>
                <td>
                    @Html.ActionLink(cliente.Nome, "Visualiza", new { id = cliente.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
 
<form method="get" action="/Cliente/Form">
    <button class="btn btn-success" onclick="location.href='@Url.Action("Form", "Cliente")';return false;">Novo Cliente</button>
</form>

