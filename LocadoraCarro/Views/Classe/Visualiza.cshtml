
@model LocadoraCarro.Models.Classe

<div class="divTexto">
    <h1 class="Titulo">Classe</h1>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Descrição</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Id</td>
            <td>@Model.Nome</td>
            <td>@Model.Descricao</td>
        </tr>
    </tbody>
</table>

@Html.ActionLink("Remover", "Remove", new { id = @Model.Id })
