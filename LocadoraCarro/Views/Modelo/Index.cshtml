@model IList<LocadoraCarro.Models.Modelo>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome do Modelo</th>
            <th>Descrição</th>
            <th>Marca</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var modelo in Model)
        {
            <tr>
                <td>@modelo.Id</td>
                <td>
                    @Html.ActionLink(modelo.Nome, "Visualiza", new { id = modelo.Id})
                </td>
                <td>@modelo.Descricao</td>
                <td>@modelo.MarcaId</td>
            </tr>
        }
    </tbody>
</table>
@Html.ActionLink("Adicionar", "Form", "Modelo")
