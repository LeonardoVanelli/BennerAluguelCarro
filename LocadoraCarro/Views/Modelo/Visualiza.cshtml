@model LocadoraCarro.Models.Modelo

<div class="divTexto">
    <h1 class="Titulo">Modelo</h1>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome do Modelo</th>
            <th>Descrição</th>
            <th>Marca</th>
            <th>Classe</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Id</td>
            <td>@Model.Descricao</td>
            <td>@Model.Nome</td>
            <td>@ViewBag.Marca.Nome</td>
            <td>@ViewBag.Classe.Nome</td>                        
        </tr>
    </tbody>
</table>

@Html.ActionLink("Remover", "Remove", new { id = @ViewBag.Modelo.Id })