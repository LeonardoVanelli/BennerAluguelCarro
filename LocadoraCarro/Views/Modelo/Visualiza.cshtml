
<div class="divTexto">
    <h1 class="Titulo">Modelo</h1>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome do Modelo</th>
            <th>Descrição</th>
            <th>Marca</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@ViewBag.Modelo.Id</td>
            <td>@ViewBag.Modelo.Nome</td>
            <td>@ViewBag.Modelo.Descricao</td>
            <td>@ViewBag.Marca.Nome</td>
        </tr>
    </tbody>
</table>

@Html.ActionLink("Remover", "Remove", new { id = @ViewBag.Modelo.Id })
@Html.ActionLink("Voltar", "Index")

