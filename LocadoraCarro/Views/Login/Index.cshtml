<form action="/Login/Autentica" method="post">

    <div class="login">
        <div class="login-screen">
            <div class="app-title">
                <h1>Login</h1>
            </div>

            <div class="login-form">
                <div class="control-group">
                    <input name="login" id="login" type="text" class="login-field" placeholder="username" >
                    <label class="login-field-icon fui-user" for="login"></label>
                </div>

                <div class="control-group">
                    <input name="senha" id="senha" type="password" class="login-field" placeholder="password" >
                    <label class="login-field-icon fui-lock" for="senha"></label>
                </div>

                <input type="submit" class="btnLogin btn-primary btn-large btn-block" value="Logar" />
               <!-- <a class="login-link" href="#">Lost your password?</a> -->
            </div>
        </div>
    </div>
</form>